<p id="notice"><%= notice %></p>

<h1>
  <%= @post.title %>
</h1>

<h3>
  <%= @post.body %>
</h3>
<%= social_share_button_tag(@post.title) %>


<% if user_signed_in? %>
<%= link_to 'Edit', edit_post_path(@post), class: 'btn-primary' %> 
<%= link_to 'Delete', @post, class: 'btn-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %> 
<% end %>
<hr>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=504323752911178";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div class="fb-comments" data-href="<%= request.url %>" data-width="100%" data-num-posts="3"></div>



<%= link_to 'Back', posts_path %>

